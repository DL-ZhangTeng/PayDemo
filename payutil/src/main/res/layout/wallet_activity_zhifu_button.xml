<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#ffffffff"
    android:gravity="center_vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:gravity="end"
        android:text="合计"
        android:textColor="#ff999999"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_order_totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:gravity="end"
        android:text="¥ 123"
        android:textColor="#ff47c23b"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end|center_vertical">

        <TextView
            android:id="@+id/tv_order_cancel"
            android:layout_width="106dp"
            android:layout_height="36dp"
            android:background="@drawable/wallet_grey_r18_round_bg"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="#ff999999"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_order_confirm"
            android:layout_width="106dp"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/wallet_black_r18_bg"
            android:gravity="center"
            android:text="去发货"
            android:textColor="#ffffffff"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>